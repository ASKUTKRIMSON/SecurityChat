<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashAuthFragment">

    <fragment
        android:id="@+id/splashAuthFragment"
        android:name="com.example.securitychat.ui.SplashAuthFragment"
        android:label="SplashAuth">
        <action
            android:id="@+id/action_splash_to_chatList"
            app:destination="@id/chatListFragment"
            app:popUpTo="@id/splashAuthFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.example.securitychat.ui.ChatListFragment"
        android:label="ChatList">
        <action
            android:id="@+id/action_chatList_to_chat"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_chatList_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_chatList_to_about"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.securitychat.ui.ChatFragment"
        android:label="Chat" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.securitychat.ui.SettingsFragment"
        android:label="Settings" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.securitychat.ui.AboutFragment"
        android:label="About" />
</navigation>
