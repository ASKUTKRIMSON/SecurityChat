<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashAuthFragment">

    <fragment
        android:id="@+id/splashAuthFragment"
        android:name="com.example.securitychat.ui.SplashAuthFragment"
        android:label="SplashAuth">
        <action
            android:id="@+id/action_splash_to_chat"
            app:destination="@id/chatListFragment"
            app:popUpTo="@id/splashAuthFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.example.securitychat.ui.ChatListFragment"
        android:label="ChatList"/>

    <fragment
        android:id="@+id/roomsFragment"
        android:name="com.example.securitychat.ui.RoomsFragment"
        android:label="Rooms"/>

    <fragment
        android:id="@+id/privateChatFragment"
        android:name="com.example.securitychat.ui.PrivateChatFragment"
        android:label="PrivateChat">
        <argument android:name="roomId" app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/createRoomFragment"
        android:name="com.example.securitychat.ui.CreateRoomFragment"
        android:label="CreateRoom"/>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.securitychat.ui.SettingsFragment"
        android:label="Settings"/>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.securitychat.ui.AboutFragment"
        android:label="About"/>
</navigation>
